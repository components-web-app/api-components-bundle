{
    "name": "silverbackis/api-components-bundle",
    "type": "symfony-bundle",
    "description": "Creates a flexible API for a website's structure, reusable components and common functionality.",
    "license": "MIT",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/silverbackdan/contexts"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-exif": "*",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-simplexml": "*",
        "api-platform/api-pack": "^1.2",
        "api-platform/core": "^2.7|^3.0|^2.7.x-dev",
        "cocur/slugify": "^4.1",
        "doctrine/annotations": "^1.7.0",
        "doctrine/doctrine-bundle": "^2.4",
        "doctrine/doctrine-migrations-bundle": "^3.0",
        "doctrine/orm": "^2.9",
        "imagine/imagine": "dev-develop as 1.3.0",
        "lexik/jwt-authentication-bundle": "2.x-dev",
        "liip/imagine-bundle": "^2.7",
        "ocramius/package-versions": "^2.1",
        "phpstan/phpdoc-parser": "1.2.0",
        "ramsey/uuid": "^4.0.1",
        "ramsey/uuid-doctrine": "^1.6",
        "symfony/console": "^5.4 || ^6",
        "symfony/event-dispatcher": "^5.4 || ^6",
        "symfony/expression-language": "^5.4 || ^6",
        "symfony/form": "^5.4 || ^6",
        "symfony/framework-bundle": "^5.4.4 || ^6",
        "symfony/mailer": "^5.4 || ^6",
        "symfony/property-info": "^5.4 || ^6",
        "symfony/security-bundle": "^5.4 || ^6",
        "twig/cssinliner-extra": "^3.0.3",
        "twig/extra-bundle": "^3.0.3",
        "twig/inky-extra": "^3.0.3"
    },
    "require-dev": {
        "behat/behat": "^3.8",
        "behatch/contexts": "3.3.1",
        "doctrine/common": "^3.1",
        "doctrine/doctrine-fixtures-bundle": "^3.3",
        "friends-of-behat/mink": "^1.8",
        "friends-of-behat/mink-browserkit-driver": "^1.4",
        "friends-of-behat/mink-extension": "^2.4",
        "friends-of-behat/symfony-extension": "^2.3",
        "justinrainbow/json-schema": "^5.4",
        "league/flysystem": "2.x-dev",
        "league/flysystem-memory": "^2",
        "phpspec/prophecy": "^1.8",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.4",
        "phpstan/phpstan-doctrine": "^0.12.7",
        "phpstan/phpstan-phpunit": "^0.12.4",
        "phpstan/phpstan-symfony": "^0.12.4",
        "phpunit/phpunit": "^9.1",
        "roave/security-advisories": "dev-master",
        "symfony/debug": "^4",
        "symfony/dotenv": "^5.4 || ^6",
        "symfony/http-client": "^5.4 || ^6",
        "symfony/maker-bundle": "^1.0",
        "symfony/mercure-bundle": "^0.3.4",
        "symfony/monolog-bundle": "^3.5",
        "symfony/phpunit-bridge": "^5.4 || ^6 || dev-master",
        "symfony/profiler-pack": "^1.0",
        "symfony/test-pack": "^1"
    },
    "replace": {
        "namshi/jose": "^7.2"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Silverback\\ApiComponentsBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Silverback\\ApiComponentsBundle\\Features\\Bootstrap\\" : "features/bootstrap/",
            "Silverback\\ApiComponentsBundle\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "root-dir": "tests/app",
            "require": "^5.4 || ^6"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    },
    "conflict": {
        "willdurand/negotiation": "^2",
        "symfony/proxy-manager-bridge": "<5.4"
    }
}

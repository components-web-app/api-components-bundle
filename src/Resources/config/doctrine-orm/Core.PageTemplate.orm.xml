<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Silverback\ApiComponentsBundle\Entity\Core\PageTemplate" table="page_template">
    <field name="isNested" type="boolean" column="is_nested" precision="0" scale="0" nullable="false"/>
    <field name="title" type="string" column="title" precision="0" scale="0" nullable="false"/>
    <field name="metaDescription" type="string" column="meta_description" precision="0" scale="0" nullable="true"/>
    <field name="uiComponent" type="string" column="ui_component" precision="0" scale="0" nullable="true"/>
    <field name="uiClassNames" type="json" column="ui_class_names" precision="0" scale="0" nullable="true"/>
    <one-to-one field="parentRoute" target-entity="Silverback\ApiComponentsBundle\Entity\Core\Route" fetch="LAZY">
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="parent_route_id" referenced-column-name="id"/>
      </join-columns>
    </one-to-one>
    <one-to-one field="route" target-entity="Silverback\ApiComponentsBundle\Entity\Core\Route" inversed-by="pageTemplate" fetch="LAZY">
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="route_id" referenced-column-name="id"/>
      </join-columns>
    </one-to-one>
    <many-to-one field="layout" target-entity="Silverback\ApiComponentsBundle\Entity\Core\Layout" inversed-by="pageTemplates" fetch="LAZY">
      <join-columns>
        <join-column name="layout_id" referenced-column-name="id" on-delete="SET NULL" nullable="1"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="componentGroups" target-entity="Silverback\ApiComponentsBundle\Entity\Core\ComponentGroup" inversed-by="pageTemplates" fetch="LAZY">
      <join-table name="page_template_component_group">
        <join-columns>
          <join-column name="page_template_id" referenced-column-name="id" on-delete="CASCADE"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="component_group_id" referenced-column-name="id" on-delete="CASCADE"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>

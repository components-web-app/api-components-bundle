<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Silverback\ApiComponentsBundle\Entity\Core\AbstractPageData" table="page_data" inheritance-type="SINGLE_TABLE">
    <discriminator-column name="dtype" type="string" length="255"/>
    <discriminator-map>
      <discriminator-mapping value="abstractpagedata" class="Silverback\ApiComponentsBundle\Entity\Core\AbstractPageData"/>
    </discriminator-map>
    <field name="isNested" type="boolean" column="is_nested" precision="0" scale="0" nullable="false"/>
    <field name="title" type="string" column="title" precision="0" scale="0" nullable="false"/>
    <field name="metaDescription" type="string" column="meta_description" precision="0" scale="0" nullable="true"/>
    <one-to-one field="parentRoute" target-entity="Silverback\ApiComponentsBundle\Entity\Core\Route" fetch="LAZY">
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="parent_route_id" referenced-column-name="id"/>
      </join-columns>
    </one-to-one>
    <one-to-one field="route" target-entity="Silverback\ApiComponentsBundle\Entity\Core\Route" inversed-by="pageData" fetch="LAZY">
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="route_id" referenced-column-name="id"/>
      </join-columns>
    </one-to-one>
    <many-to-one field="pageTemplate" target-entity="Silverback\ApiComponentsBundle\Entity\Core\PageTemplate" fetch="LAZY">
      <join-columns>
        <join-column name="page_template_id" referenced-column-name="id" nullable=""/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
